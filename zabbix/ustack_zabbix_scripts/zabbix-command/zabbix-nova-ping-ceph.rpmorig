#!/bin/bash
eth2_ip=`/sbin/ifconfig eth2|awk -F'[: ]*' 'NR==2{print $4}'`
eth0_net=`/sbin/ifconfig eth0 |awk -F'[: ]*' 'NR==2{print $4}'|cut -d. -f1-3`
eth0_61ip=${eth0_net}.61
ping $eth0_61ip -I $eth2_ip -c 1 -W 1 > /dev/null
ret=`echo $?`
if [[ $ret = "1" ]]
then
    echo '0'
else
    echo '1'
fi
